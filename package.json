{
  "name": "electron-shared-state",
  "version": "1.0.0",
  "description": "❤️ easily sharing state across electron main and renderer processes.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "directories": {
    "lib": "lib"
  },
  "homepage": "https://github.com/shadeofgod/electron-shared-state#readme",
  "repository": "github:shadeofgod/electron-shared-state",
  "bugs": "https://github.com/shadeofgod/electron-shared-state/issues",
  "scripts": {
    "build": "tsup lib/index.ts --minify --dts --format esm,cjs",
    "example": "electron example/main.js",
    "prepare": "is-ci || husky install",
    "test": "mocha"
  },
  "keywords": [
    "electron",
    "share",
    "state",
    "sync",
    "process",
    "store"
  ],
  "author": "zoubingwu",
  "license": "MIT",
  "dependencies": {
    "immer": "^9.0.19"
  },
  "peerDependencies": {
    "electron": "*"
  },
  "devDependencies": {
    "@swc/core": "^1.3.39",
    "@types/node": "^18.15.0",
    "electron": "23.1.3",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "mocha": "^10.2.0",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "spectron": "^19.0.0",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5"
  },
  "files": [
    "dist"
  ]
}
